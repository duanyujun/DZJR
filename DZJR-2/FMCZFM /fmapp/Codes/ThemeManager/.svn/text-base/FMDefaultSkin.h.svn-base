#import <Foundation/Foundation.h>

@interface FMDefaultSkin : NSObject

@property (nonatomic, assign) BOOL nightMode;   //是否夜间模式

- (id)init;
#pragma mark Status Bar
- (UIStatusBarStyle)statusbarStyle;

#pragma mark - Base colors
- (UIColor *)backgroundColor;           //view背景色
- (UIColor *)scrollViewBackgroudColor;  //ScrollView背景色
- (UIColor *)buttonHighlightColor;      //button高亮背景色
- (UIColor *)cellSelectedColor;         //cell点击时背景色

#pragma mark - Tint colors
- (UIColor *)baseTintColor;             //Segment,Switch,Step着色 (主色调)

#pragma mark - text colors
- (UIColor *)textColor;                 //内容文本颜色
- (UIColor *)sepratorColor;             //分割线颜色

#pragma mark - Navigation bar
- (UIColor *)navigationTextColor;       //navigationBar文字颜色
- (UIColor *)navigationBarTintColor;    //navigationBar背景色
- (UIImage *)navigationBarBackgroundImage;//navigationBar背景图片

#pragma mark - Tab bar
- (UIColor *)tabBarTintColor;           //TabControlBar背景色
- (UIImage *)tabBarBackgroundImage;     //TabControlBar背景图片
- (UIColor *)tabBarTitleColor;          //TabControlBar标题色
- (UIColor *)tabBarSelectColor;         //TabControlBar选中色
@end
